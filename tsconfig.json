{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "types": ["vite/client"],
    },
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts",
    ],
    "lib": [
        "es6",
        "dom",
        "es5", 
        "es2015.promise" ,
        "es2015", 
        "es2017"
      ],
    "exclude": [
        "node_modules"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true"
}
